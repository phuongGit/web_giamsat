<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>server basic</title>
	<script src="jquery.min.js"> </script>
	<script src="socket.io/socket.io.js"></script>
	<script>
		
	</script>
	<script>
		var socket = io("http://127.0.0.1:3000");

		$(document).ready(function(){
			alert("hello, Welcome to our server");
		})

		socket.on("server-response",function(data){
				$("#contents").append(data + ", ");
		});

		$(document).ready(function(){
			$("#login_Id").click(function(){
				socket.emit("client-send-data", "I want to log in");
			});
		});
	</script>
	<link rel="stylesheet" href="">
</head>
<body>
	<a href="/login" id="login_Id">Log in</a>
	<textarea name="" id="contents"></textarea>

</body>
</html>